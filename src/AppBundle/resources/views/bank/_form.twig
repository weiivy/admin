<input type="hidden" name="_token" value="{{ csrf_token() }}">

<div class="form-group">
    <label class="col-sm-2 control-label">银行名称</label>

    <div class="col-sm-6">
        <input type="text" name="Bank[bank_name]" class="form-control" id="bank_name"
               value="{{ bank.bank_name|default(app.request.get('Bank').bank_name|default('')) }}">
    </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label">银行缩写</label>

    <div class="col-sm-6">
        <input type="text" name="Bank[bank]" class="form-control" id="bank"
               value="{{ bank.bank|default(app.request.get('Bank').bank|default('')) }}">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">银行备注</label>

    <div class="col-sm-6">
        <input type="text" name="Bank[note]" class="form-control" id="note"
               value="{{ bank.note|default(app.request.get('Bank').note|default('')) }}">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">排序</label>

    <div class="col-sm-6">
        <input type="text" name="Bank[sort]" class="form-control" id="sort"
               value="{{ bank.sort|default(app.request.get('Bank').sort|default(0)) }}">
        <span>值越大排序越前</span>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">状态</label>

    <div class="col-sm-6">
        {% autoescape false %}
            {{ app.html.dropDownList('Bank[status]', bank.status|default(10) , statusArr, {'class':"form-control"}) }}
        {% endautoescape %}
    </div>

</div>

<div class="form-group">
    <label class="col-sm-2 control-label"></label>

    <div class="col-sm-6">
        <button class="btn btn-success js-save">
            {% if bank is defined %}
                保存
            {% else %}
                提交
            {% endif %}
        </button>
    </div>
</div>
